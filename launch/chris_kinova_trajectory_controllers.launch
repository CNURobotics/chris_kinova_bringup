<launch>

  <!-- these are the arguments you can pass this launch file, for example paused:=true -->
  <arg name="robot_namespace"        default="/"/> <!-- robot's name used by plugin to publish topics -->
  <arg name="kinova_robotType"       default="$(optenv KINOVA_ARM m1n6s200)" />
  <arg name="robot_name"             default="$(arg kinova_robotType)"/>
  <arg name="start_controllers"      default="" /> <!-- "- -stopped" -->

  <group ns="$(arg robot_namespace)">
        <rosparam file="$(find chris_kinova_bringup)/param/$(arg robot_name)_trajectory_controllers.yaml"
                  ns="$(arg robot_name)_driver" command="load"/>

        <node name="$(arg robot_name)_trajectory_controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
          output="screen" ns="/$(arg robot_name)_driver"
          args="$(arg start_controllers)
                arm_controller
                gripper_controller
               "/>
  </group>

</launch>
